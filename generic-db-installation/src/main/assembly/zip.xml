<?xml version='1.0' encoding='UTF-8'?>
<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>zip</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>src/main/filters/filter.xml</source>
            <outputDirectory>META-INF/vault</outputDirectory>
            <destName>filter.xml</destName>
            <filtered>true</filtered>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/content/META-INF</directory>
            <outputDirectory>META-INF</outputDirectory>
            <excludes>
                <exclude>**/.DS_Store</exclude>
            </excludes>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/content/jcr_root</directory>
            <outputDirectory>jcr_root</outputDirectory>
            <excludes>
                <exclude>**/.DS_Store</exclude>
            </excludes>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>jcr_root/apps/aem-monitoring/install</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <scope>compile</scope>
            <includes>
                <include>com.icfolson.aem.monitoring:aem-monitoring-core</include>
                <include>com.icfolson.aem.monitoring:aem-monitoring-database</include>
                <include>com.icfolson.aem.monitoring:aem-monitoring-generic-db</include>
                <include>org.osgi:org.osgi.service.jdbc</include>
                <include>org.jooq:jooq</include>
            </includes>
            <useStrictFiltering>true</useStrictFiltering>
        </dependencySet>
        <dependencySet>
            <outputDirectory>jcr_root/etc/packages/aem-monitoring-ui</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <scope>compile</scope>
            <includes>
                <include>com.icfolson.aem.monitoring:aem-monitoring-ui</include>
            </includes>
            <useStrictFiltering>true</useStrictFiltering>
        </dependencySet>
    </dependencySets>
</assembly>
