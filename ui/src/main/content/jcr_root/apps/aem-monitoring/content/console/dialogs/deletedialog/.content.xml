<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Delete Selection"
    sling:resourceType="granite/ui/components/coral/foundation/dialog">
    <items jcr:primaryType="nt:unstructured">
        <form
            granite:id="ggp-groupings-folder-model"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form"
            action="/"
            async="{Boolean}true"
            foundationForm="{Boolean}true"
            method="post"
            style="vertical">
            <successresponse
                jcr:primaryType="nt:unstructured"
                jcr:title="The selected items have been deleted"
                sling:resourceType="granite/ui/components/coral/foundation/form/responses/reload"/>
            <items jcr:primaryType="nt:unstructured">
                <items
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="ggp/components/admin/groupings/delete/items"
                        items="${requestPathInfo.suffix}"/>
                <charset
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                        name="_charset_"
                        value="utf-8"/>
                <operation
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                        name=":operation"
                        value="delete"/>
            </items>
        </form>
    </items>
    <footer jcr:primaryType="nt:unstructured">
        <cancel
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/button"
            text="Cancel">
            <parentConfig
                jcr:primaryType="nt:unstructured"
                close="{Boolean}true"/>
        </cancel>
        <create
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/button"
            formId="ggp-groupings-folder-model"
            text="Delete"
            type="submit"
            variant="warning"/>
    </footer>
</jcr:root>
